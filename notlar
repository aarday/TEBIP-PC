//Örnek 12 --- Kısa Sınav
int main()
{
  int sayi;
  int karesi;
  int kupu;

 printf("Merhaba, lutfen bir sayi giriniz \n ");

 scanf("%d", &sayi);
 karesi=sayi*sayi;
 kupu=sayi*sayi*sayi;

 printf("Sayinin karesi: %d \n", karesi);
 printf("Sayinin kupu: %d \n", kupu );

  return 0;

}

