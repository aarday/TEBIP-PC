//Örnek 12 --- Kısa Sınav
int main()
{
  int sayi;
  int karesi;
  int kupu;

 printf("Merhaba, lutfen bir sayi giriniz \n ");

 scanf("%d", &sayi);
 karesi=sayi*sayi;
 kupu=sayi*sayi*sayi;

 printf("Sayinin karesi: %d \n", karesi);
 printf("Sayinin kupu: %d \n", kupu );

  return 0;

}

//Örnek 13
int main()
{
  int i=1;
  i=i+1;
  printf("i'nin degeri: %d", i);
  printf("\n");
  i=i+1;
  printf("i'nin degeri: %d", i );
  return 0;
}

//Örnek 14
int main()
{
//for(Degisken adi;Kosul;Eylem)
// "i++" her bir döngü eyleminde i'yi bir arttirir.
int i=1;
for (i;i<10;i++)
{
  printf("i'nin degeri: %d", i );
  printf("\n");
}
  return 0;
}

//Örnek 15
int main()
{
//for(Degisken adi;Kosul;Eylem)
// "i--" her bir döngü eyleminde i'yi bir azaltır.
int i=1;
for (int j=80;j>0;j--)
{
  printf("j'nin degeri: %d", j );
  printf("\n");
}
  return 0;
}
 //Örnek 16
 int main()
 {
    int i=1;
    int j=1;
    for(i;i<10;i++){
      for(j;j<5;j++){
         printf("j; %d \n", j);
      }
      printf("i; %d \n", i);
    }
   return 0;
 }
// 16 Başka bir versiyonu
int main()
{
   int i=1;
   int j=1;
   for(i;i<10;i++){
     for(j;j<5;j++){
        printf("j: %d i: %d \n",j,i);
     }
     printf("j: %d i: %d \n",j,i);
   }
  return 0;
}

